.modal-dialog
  .modal-content
    .modal-header
      = button_tag(type: 'button', class: 'close', data: { dismiss: 'modal' }) do
        %span{ 'aria-hidden' => 'true' }
          &times;
        %span.sr-only
          Close
      %h4.modal-title#myModalLabel
        Are you ABSOLUTELY sure?
    .modal-body
      %p
        This action CANNOT be undone. This will delete
        %strong
          #{subcategory_name || subcategory_id}.
    .modal-footer
      %button.btn.btn-default{ 'data-dismiss' => 'modal' }  Close
      = link_to t('admin.buttons.confirm_delete_subcategory'), { action: :destroy, id: subcategory_id}, method: :delete, class: 'btn btn-danger'
